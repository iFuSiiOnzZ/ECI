<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"  xmlns:card_view="http://schemas.android.com/apk/res-auto"

    android:layout_height="wrap_content"
    android:layout_width="match_parent"

    card_view:cardBackgroundColor="#ffffff"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <eu.ifussionzz.eci.Interface.View.WebImageView
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:id="@+id/excerpt_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/no_image"/>

            <TextView
                android:padding="10dp"
                android:textSize="16sp"
                android:background="#A0000000"
                android:id="@+id/excerpt_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:textColor="@android:color/white"/>

        </RelativeLayout>

        <RelativeLayout
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="12sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/excerpt_description"/>

            <TextView
                android:textSize="12sp"
                android:id="@+id/excerpt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:textSize="12sp"
                android:id="@+id/excerpt_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"/>

            <TextView
                android:textSize="12sp"
                android:visibility="gone"
                android:id="@+id/excerpt_ncomments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>