<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="local.host.eci">

    // Permisos de acceso a Internet y estado de la red
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    // Permisos de lectura/escritura SDCARD
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    // Permisos para vibrar
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application android:allowBackup="true" android:label="@string/app_name" android:icon="@drawable/ic_launcher" android:supportsRtl="true" android:theme="@style/AppTheme">

        <activity android:name="eu.ifussionzz.eci.Activity_01" android:screenOrientation="portrait" android:label="@string/manifest_activity_01_label">
            <intent-filter>
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="android.intent.action.MAIN" />
            </intent-filter>
        </activity>

        <activity android:name="eu.ifussionzz.eci.Activity_02" android:screenOrientation="portrait" android:label="@string/manifest_activity_02_label">
        </activity>

        <activity android:name="eu.ifussionzz.eci.Activity_03" android:screenOrientation="portrait" android:configChanges="keyboardHidden|orientation|screenSize" android:label="@string/manifest_activity_03_label">
        </activity>

        <activity android:name="eu.ifussionzz.eci.Activity_04" android:screenOrientation="portrait" android:label="@string/manifest_activity_02_label">
        </activity>

    </application>

</manifest>
