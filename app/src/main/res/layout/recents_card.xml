<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"

        android:layout_height="120dp"
        android:layout_width="match_parent"

        card_view:cardBackgroundColor="#ffffff"
        card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <elchapuzasinformatico.com.eci.Views.WebImageView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:id="@+id/id_post_image"
            android:adjustViewBounds="true"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:maxLines="2"
            android:padding="16dp"
            android:textStyle="bold"
            android:id="@+id/id_post_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@id/id_post_image"/>

        <RelativeLayout
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="8dp">

            <TextView
                android:textSize="12sp"
                android:id="@+id/id_post_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"/>


            <TextView
                android:textSize="12sp"
                android:id="@+id/id_post_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:textSize="12sp"
                android:id="@+id/id_post_ncomments"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"/>

            </RelativeLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>
