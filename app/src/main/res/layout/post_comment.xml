<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:longClickable="true">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" >

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/comment_author" android:id="@+id/id_comment_author" android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/comment_replay" android:id="@+id/id_comment_replay"  android:layout_alignParentTop="true" android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <TextView android:layout_width="match_parent" android:layout_height="wrap_content" android:textColor="@color/comment_content" android:id="@+id/id_comment_content" />

</LinearLayout>